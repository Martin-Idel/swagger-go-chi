      {{ template "handler" . }}
    {{- end -}}
  {{- end -}}
  {{- with $pathItem.Post }}
    {{- if .OperationID }}
      {{ template "handler" . }}
    {{- end -}}
  {{- end -}}
  {{- with $pathItem.Put }}
    {{- if .OperationID }}
      {{ template "handler" . }}
    {{- end -}}
  {{- end -}}
  {{- with $pathItem.Patch }}
    {{- if .OperationID }}
      {{ template "handler" . }}
    {{- end -}}
  {{- end -}}
  {{- with $pathItem.Delete }}
    {{- if .OperationID }}
      {{ template "handler" . }}
    {{- end -}}
  {{- end -}}
{{ end }}
